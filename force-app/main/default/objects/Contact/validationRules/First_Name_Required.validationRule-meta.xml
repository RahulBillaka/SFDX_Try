<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_Required</fullName>
    <active>true</active>
    <description>first name is required</description>
    <errorConditionFormula>ISBLANK(FirstName)  ||  ISBLANK(Phone)  ||  ISBLANK( Email )</errorConditionFormula>
    <errorMessage>first name, phone and email cannot be null</errorMessage>
</ValidationRule>
